<?xml version="1.0"?>
<robot name="s0101_4dof">
  
  <!-- Base fixe -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Moteur 2: Shoulder Lift (peut aussi se fermer) -->
  <joint name="shoulder_lift" type="revolute">
    <parent link="base_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="upper_arm_link">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.0008" ixy="0.0" ixz="0.0" iyy="0.0008" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Moteur 4: Wrist Flex -->
  <joint name="wrist_flex" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="wrist_flex_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5.0" velocity="1.5"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <link name="wrist_flex_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.4 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.15"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.00005"/>
    </inertial>
  </link>

  <!-- Moteur 5: Wrist Roll -->
  <joint name="wrist_roll" type="revolute">
    <parent link="wrist_flex_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="3.0" velocity="2.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <link name="wrist_roll_link">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.06"/>
      </geometry>
      <material name="yellow">
        <color rgba="0.9 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00003"/>
    </inertial>
  </link>

  <!-- Moteur 6: Gripper (joint prismatique pour ouverture/fermeture) -->
  <joint name="gripper" type="prismatic">
    <parent link="wrist_roll_link"/>
    <child link="gripper_left"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.04" effort="5.0" velocity="0.1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="gripper_left">
    <visual>
      <origin xyz="0 0.02 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.06"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.02 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0.02 0.03" rpy="0 0 0"/>
      <inertia ixx="0.000001" ixy="0.0" ixz="0.0" iyy="0.000001" iyz="0.0" izz="0.000001"/>
    </inertial>
  </link>

  <!-- Gripper droit (mirroir) -->
  <joint name="gripper_mimic" type="prismatic">
    <parent link="wrist_roll_link"/>
    <child link="gripper_right"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.04" upper="0.0" effort="5.0" velocity="0.1"/>
    <dynamics damping="0.1" friction="0.1"/>
    <mimic joint="gripper" multiplier="-1" offset="0"/>
  </joint>

  <link name="gripper_right">
    <visual>
      <origin xyz="0 -0.02 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.06"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.02 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 -0.02 0.03" rpy="0 0 0"/>
      <inertia ixx="0.000001" ixy="0.0" ixz="0.0" iyy="0.000001" iyz="0.0" izz="0.000001"/>
    </inertial>
  </link>

</robot>
